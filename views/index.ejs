<%- include('templates/header', {user, title: "Home" }) %>

    <div class="text-center mt-10">
        <% if (!user) { %>
            <!-- Not logged-in-->
            <h2 class="text-2xl mb-4">Welcome to my website!</h2>
            <a href="/signup"
                class="inline-block bg-pink-200 hover:bg-pink-300 text-gray-900 font-semibold px-4 py-2 shadow-md transition">
                Sign Up
            </a>
            <a href="/login"
                class="inline-block bg-pink-400 hover:bg-pink-500 text-gray-900 font-semibold px-4 py-2 ml-2 shadow-md transition">
                Log In
            </a>
            <% } else { %>
                <!-- Logged-in -->
                <h2 class="text-2xl mb-4">Hello, <%= user.name %>!</h2>
                <a href="/members" class="inline-block text-pink-400 hover:underline font-semibold px-4 py-2">
                    Go to Members Area
                </a>
                <% if (user.user_type==='admin' ) { %>
                    <a href="/admin" class="inline-block text-green-600 hover:underline font-semibold px-4 py-2">
                        Go to Admin Panel
                    </a>
                    <% } %>
                        <a href="/logout" class="inline-block text-pink-600 hover:underline font-semibold px-4 py-2">
                            Logout
                        </a>
                        <% } %>
    </div>

    <%- include("templates/footer") %>